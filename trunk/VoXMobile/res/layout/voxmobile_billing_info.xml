<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" android:layout_height="wrap_content">

    <ScrollView android:id="@+id/ScrollView01" 
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content"
    	android:layout_marginBottom="75dp" 
    	android:layout_marginLeft="10dp"
    	android:layout_marginRight="10dp">
    	
    	<LinearLayout android:orientation="vertical"
    		android:layout_width="fill_parent" 
    		android:layout_height="wrap_content">
    		
			<TextView
        		android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		    	android:textSize="20sp"
        		android:text="@string/voxmobile_first_name" />
			<EditText android:id="@+id/voxmobile_first_name"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
        		android:inputType="textCapWords|textNoSuggestions"
				android:maxLength="20"
				android:singleLine="true"/>
		
			<TextView
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
		    	android:textSize="20sp"
		        android:text="@string/voxmobile_last_name" />
			<EditText android:id="@+id/voxmobile_last_name"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
		        android:inputType="textCapWords|textNoSuggestions"
				android:maxLength="20"
				android:singleLine="true"/>
        
			<TextView
		        android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
		    	android:textSize="20sp"
		        android:text="@string/voxmobile_email_address" />
			<EditText android:id="@+id/voxmobile_email_address"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
		        android:inputType="textEmailAddress|textNoSuggestions"
				android:maxLength="64"
				android:singleLine="true"/>
		
			<TextView
		        android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
		    	android:textSize="20sp"
		        android:text="@string/voxmobile_email_address_confirm" />
			<EditText android:id="@+id/voxmobile_email_address_confirm"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
        		android:inputType="textEmailAddress|textNoSuggestions"
				android:maxLength="64"
				android:singleLine="true"/>
		
    		<LinearLayout android:id="@+id/voxmobile_card_fields" 
		    	android:orientation="vertical"
    			android:layout_width="fill_parent" 
		    	android:layout_height="wrap_content">
				<TextView
    	    		android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
		    		android:textSize="20sp"
        			android:text="@string/voxmobile_card_number" />
				<EditText android:id="@+id/voxmobile_card_number"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
        			android:inputType="number|textNoSuggestions"
					android:maxLength="16"
					android:singleLine="true"/>
		
				<TextView
        			android:layout_width="wrap_content"
		    	    android:layout_height="wrap_content"
		    		android:textSize="20sp"
	        		android:text="@string/voxmobile_card_cvv" />
				<EditText android:id="@+id/voxmobile_card_cvv"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
        			android:inputType="number|textNoSuggestions"
					android:maxLength="4"
					android:singleLine="true"/>
		
				<TextView
        			android:layout_width="wrap_content"
		    	    android:layout_height="wrap_content"
		    		android:textSize="20sp"
	        		android:text="@string/voxmobile_card_month" />
    			<Spinner android:id="@+id/voxmobile_card_month"
					android:prompt="@string/voxmobile_card_month"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
				    android:paddingLeft="0dp"
				    android:paddingTop="5dp"
				    android:paddingBottom="5dp"
		    	    android:textColor="#000"/>
		
				<TextView
    	    		android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
		    		android:textSize="20sp"
        			android:text="@string/voxmobile_card_year" />
				<Spinner android:id="@+id/voxmobile_card_year"
					android:prompt="@string/voxmobile_card_year"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
			    	android:paddingLeft="0dp"
				    android:paddingTop="5dp"
				    android:paddingBottom="5dp"
			        android:textColor="#000"/>		    	
		    </LinearLayout>
		
		
    		<LinearLayout android:id="@+id/voxmobile_card_billing_fields" 
		    	android:orientation="vertical"
    			android:layout_width="fill_parent" 
		    	android:layout_height="wrap_content">
				<TextView
        			android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			    	android:textSize="20sp"
    	    		android:text="@string/voxmobile_billing_street" />
				<EditText android:id="@+id/voxmobile_billing_street"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
        			android:inputType="textCapWords|textNoSuggestions"
					android:maxLength="50"
					android:singleLine="true"/>
		
				<TextView
			        android:layout_width="wrap_content"
    	    		android:layout_height="wrap_content"
			    	android:textSize="20sp"
			        android:text="@string/voxmobile_billing_city" />
				<EditText android:id="@+id/voxmobile_billing_city"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
	    	    	android:inputType="textCapWords|textNoSuggestions"
					android:maxLength="25"
					android:singleLine="true"/>
		
				<TextView
    	    		android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			    	android:textSize="20sp"
        			android:text="@string/voxmobile_billing_zip" />
				<EditText android:id="@+id/voxmobile_billing_zip"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
        			android:inputType="textNoSuggestions"
					android:maxLength="10"
					android:singleLine="true"/>
			</LinearLayout>
			
        </LinearLayout>
    </ScrollView>
	
    <LinearLayout android:id="@+id/controls" 
    	android:orientation="horizontal"
    	android:layout_width="fill_parent" 
    	android:layout_height="wrap_content"
    	android:layout_alignParentBottom="true"
    	style="@android:style/ButtonBar">
		
		<Button android:layout_height="wrap_content" 
			android:layout_width="wrap_content" 
			android:layout_weight="1" 
			android:layout_marginLeft="20dip" 
			android:layout_marginRight="20dip" 
			android:id="@+id/do_voxmobile_billing_info_cancel" 
			android:text="@string/cancel"></Button>

		<Button android:layout_height="wrap_content" 
			android:layout_width="wrap_content" 
			android:layout_weight="1" 
			android:layout_marginLeft="20dip" 
			android:layout_marginRight="20dip" 
			android:id="@+id/do_voxmobile_billing_info_continue" 
			android:text="@string/voxmobile_continue"></Button>
						
	</LinearLayout>

</RelativeLayout>
